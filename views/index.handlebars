<div class="container">
  <header class="navbar">
    <div class="columns">
      <div class="column col-12 my-2">
        <section class="navbar-section">
          <a href="/" class="navbar-brand mr-2">Mongo News</a>
          <a href="/saved" class="btn mr-2">Saved Articles</a>
          <button class="btn btn-primary" id="scrapeNew">Scrape New Articles</button>
        </section>
      </div>
    </div>
  </header>
</div>

<div class="container">
  <div class="bg-gray text-center p-2">
    <h2>Mongo News</h2>
    <p>Smashing Magazine Edition</p>
  </div>
</div>

<div class="container grid-xl">
  {{#each articles}}
    {{> article-panel}}
  {{/each}}

  {{!-- display when no articles are populated --}}
  {{#unless articles}}
      <div class="panel">
        <div class="panel-header">
          <div class="panel-title h5">No Articles</div>
        </div>
        <div class="panel-body">          
          <p>
            {{#if saved}}
              It looks like you haven't saved any articles.
            {{else}}
              It looks like there aren't any news articles yet. Press the 'Scrape New Articles' button above to get some articles.
            {{/if}}
          </p>
        </div>
      </div>
  {{/unless}}
  {{> notes}}
</div>

<footer>
  <div class="container grid-xl">
    <a href="https://github.com/median-man/mongo-news" class="btn btn-link">Github</a>
  </div>
</footer>
